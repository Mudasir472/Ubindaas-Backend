<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Categories - Ubindass Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Include Sidebar -->
            <%- include('../partials/sidebar') %>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Super Categories</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/categories/super/create" class="btn btn-primary">Add New Category</a>
                    </div>
                </div>

                <% if(success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success"><%= success_msg %></div>
                <% } %>

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% superCategories.forEach((category, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <% if(category.image) { %>
                                            <img src="/uploads/categories/<%= category.image %>" width="50" height="50" alt="<%= category.name %>">
                                        <% } else { %>
                                            <span>No Image</span>
                                        <% } %>
                                    </td>
                                    <td><%= category.name %></td>
                                    <td><%= category.description %></td>
                                    <td>
                                        <span class="badge <%= category.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                                            <%= category.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/admin/categories/super/edit/<%= category._id %>" class="btn btn-sm btn-info">Edit</a>
                                        <button onclick="deleteCategory('<%= category._id %>')" class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteCategory(id) {
            if(confirm('Are you sure you want to delete this category?')) {
                fetch(`/admin/categories/super/${id}`, {
                    method: 'DELETE',
                }).then(response => {
                    if(response.ok) {
                        window.location.reload();
                    }
                });
            }
        }
    </script>
</body>
</html>