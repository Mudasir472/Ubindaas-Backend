<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Ubindass Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .star-rating {
            color: #ffc107;
        }
        .empty-star {
            color: #e2e2e2;
        }
        .rating-card {
            border-left: 4px solid #e9ecef;
        }
        .rating-card.pending {
            border-left-color: #ffc107;
        }
        .rating-card.approved {
            border-left-color: #28a745;
        }
        .rating-card.rejected {
            border-left-color: #dc3545;
        }
        .product-thumbnail {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/sidebar') %>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Ratings for <%= product.name %></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/products?gender=<%= product.gender %>" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Products
                        </a>
                    </div>
                </div>

                <% if(success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if(error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="row mb-4">
                    <!-- Product Summary Card -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex">
                                    <div class="me-3">
                                        <img src="/uploads/products/<%= product.images[0] %>" alt="<%= product.name %>" class="product-thumbnail">
                                    </div>
                                    <div>
                                        <h5 class="card-title"><%= product.name %></h5>
                                        <p class="card-text text-muted">
                                            <%= product.gender.charAt(0).toUpperCase() + product.gender.slice(1) %> |
                                            <%= product.category.name %>
                                        </p>
                                        <div class="d-flex align-items-center">
                                            <div class="me-2">
                                                <% for(let i = 1; i <= 5; i++) { %>
                                                    <% if(i <= Math.floor(product.averageRating)) { %>
                                                        <i class="bi bi-star-fill star-rating"></i>
                                                    <% } else if(i - 0.5 <= product.averageRating) { %>
                                                        <i class="bi bi-star-half star-rating"></i>
                                                    <% } else { %>
                                                        <i class="bi bi-star empty-star"></i>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                            <span class="fw-bold"><%= product.averageRating.toFixed(1) %></span>
                                            <span class="text-muted ms-2">(<%= product.ratingCount %> reviews)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Rating Filter Card -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Filter Ratings</h5>
                                <form action="/admin/products/<%= product._id %>/ratings" method="GET" class="row g-3">
                                    <div class="col-md-6">
                                        <label for="status" class="form-label">Status</label>
                                        <select id="status" name="status" class="form-select">
                                            <option value="all" <%= status === 'all' ? 'selected' : '' %>>All</option>
                                            <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="approved" <%= status === 'approved' ? 'selected' : '' %>>Approved</option>
                                            <option value="rejected" <%= status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="limit" class="form-label">Items per page</label>
                                        <select id="limit" name="limit" class="form-select">
                                            <option value="10" <%= limit === 10 ? 'selected' : '' %>>10</option>
                                            <option value="25" <%= limit === 25 ? 'selected' : '' %>>25</option>
                                            <option value="50" <%= limit === 50 ? 'selected' : '' %>>50</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-funnel"></i> Apply Filters
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ratings List -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">
                            Product Ratings 
                            <span class="badge bg-secondary"><%= total %> total</span>
                        </h5>

                        <% if (ratings && ratings.length > 0) { %>
                            <div class="mb-4">
                                <% ratings.forEach(rating => { %>
                                    <div class="rating-card <%= rating.status %> p-3 mb-3 rounded-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="d-flex align-items-center mb-2">
                                                    <% for(let i = 1; i <= 5; i++) { %>
                                                        <i class="bi bi-star<%= i <= rating.rating ? '-fill star-rating' : ' empty-star' %>"></i>
                                                    <% } %>
                                                    <span class="badge ms-2 <%= 
                                                        rating.status === 'pending' ? 'bg-warning' : 
                                                        rating.status === 'approved' ? 'bg-success' : 'bg-danger' 
                                                    %>"><%= rating.status.charAt(0).toUpperCase() + rating.status.slice(1) %></span>
                                                </div>
                                                <p class="fw-bold mb-1">
                                                    <%= rating.userId.name || 'Anonymous' %>
                                                    <small class="text-muted">(<%= rating.userId.email %>)</small>
                                                </p>
                                                <% if (rating.review) { %>
                                                    <p class="mb-1"><%= rating.review %></p>
                                                <% } else { %>
                                                    <p class="text-muted fst-italic mb-1">No review text provided</p>
                                                <% } %>
                                                <small class="text-muted">
                                                    <i class="bi bi-clock"></i> 
                                                    <%= new Date(rating.createdAt).toLocaleDateString() %> at 
                                                    <%= new Date(rating.createdAt).toLocaleTimeString() %>
                                                </small>
                                            </div>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton<%= rating._id %>" data-bs-toggle="dropdown" aria-expanded="false">
                                                    Actions
                                                </button>
                                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= rating._id %>">
                                                    <% if (rating.status !== 'approved') { %>
                                                        <li>
                                                            <button class="dropdown-item text-success" 
                                                                onclick="updateRatingStatus('<%= rating._id %>', 'approved')">
                                                                <i class="bi bi-check-circle"></i> Approve
                                                            </button>
                                                        </li>
                                                    <% } %>
                                                    
                                                    <% if (rating.status !== 'rejected') { %>
                                                        <li>
                                                            <button class="dropdown-item text-danger" 
                                                                onclick="updateRatingStatus('<%= rating._id %>', 'rejected')">
                                                                <i class="bi bi-x-circle"></i> Reject
                                                            </button>
                                                        </li>
                                                    <% } %>
                                                    
                                                    <% if (rating.status !== 'pending') { %>
                                                        <li>
                                                            <button class="dropdown-item text-warning" 
                                                                onclick="updateRatingStatus('<%= rating._id %>', 'pending')">
                                                                <i class="bi bi-hourglass"></i> Mark as Pending
                                                            </button>
                                                        </li>
                                                    <% } %>
                                                    
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <button class="dropdown-item text-danger" 
                                                            onclick="deleteRating('<%= rating._id %>')">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>

                            <!-- Pagination -->
                            <% if (totalPages > 1) { %>
                                <nav>
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                            <a class="page-link" href="/admin/products/<%= product._id %>/ratings?page=<%= currentPage - 1 %>&status=<%= status %>&limit=<%= limit %>">
                                                Previous
                                            </a>
                                        </li>
                                        
                                        <% for(let i = 1; i <= totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                <a class="page-link" href="/admin/products/<%= product._id %>/ratings?page=<%= i %>&status=<%= status %>&limit=<%= limit %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>
                                        
                                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                            <a class="page-link" href="/admin/products/<%= product._id %>/ratings?page=<%= currentPage + 1 %>&status=<%= status %>&limit=<%= limit %>">
                                                Next
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-star text-secondary" style="font-size: 3rem;"></i>
                                <h4 class="mt-3">No Ratings Found</h4>
                                <p class="text-muted">There are no ratings for this product with the selected filters.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateRatingStatus(id, status) {
            if (confirm(`Are you sure you want to mark this rating as ${status}?`)) {
                fetch(`/admin/ratings/${id}/status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating the rating status');
                });
            }
        }

        function deleteRating(id) {
            if (confirm('Are you sure you want to delete this rating? This action cannot be undone.')) {
                fetch(`/admin/ratings/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the rating');
                });
            }
        }
    </script>
</body>
</html>